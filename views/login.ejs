<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Login</title>

  <style>
    body {
      font-family: Arial, sans-serif;
      background: #f4f4f4;
      margin: 0;
      padding: 0;

      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
    }

    .login-box {
      background: white;
      padding: 35px;
      border-radius: 8px;
      width: 380px;
      box-shadow: 0 0 10px rgba(0,0,0,0.1);
    }

    /* Input and button same size */
    input {
      width: 100%;
      padding: 12px;         /* SAME AS BUTTON */
      margin: 12px 0;
      border: 1px solid #ccc;
      border-radius: 5px;    /* SAME AS BUTTON */
      font-size: 15px;       /* SAME AS BUTTON */
      box-sizing: border-box;
    }
    a{
        text-decoration: none;
    }

    button {
      width: 100%;
      padding: 12px;
      background: #333;
      color: white;
      border: none;
      cursor: pointer;
      font-size: 15px;
      border-radius: 5px;
    }

    button:hover {
      background: #555;
    }
  </style>

</head>
<body>

  <div class="login-box">
    <h2>Login</h2>

    <% if (typeof error !== "undefined") { %>
      <p style="color:red;"><%= error %></p>
    <% } %>

    <form action="/api/v1/user/login" method="POST">
      <label>Email</label>
      <input type="email" name="email" required>

      <label>Password</label>
      <input type="password" name="password" required>

      <button type="submit">Login</button>
    </form>

    <p style="margin-top:15px;">
      Don't have an account? <a href="/register">Register</a>
    </p>
  </div>

</body>
</html>
