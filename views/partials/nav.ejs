<nav style="
  width: 100%;
  padding: 15px 25px;
  background: #333;
  color: white;
  display: flex;
  justify-content: space-between;  
  align-items: center;              
  font-family: Arial;
">

  <div style="font-size: 18px; font-weight: bold;">
    PrimeTrade
  </div>


  <div style="display: flex; gap: 20px; align-items: center;">

    <a href="/" style="color:white; text-decoration:none;">Home</a>

    <% if (!user) { %>
      <a href="/login" style="color:white; text-decoration:none;">Login</a>
      <a href="/register" style="color:white; text-decoration:none;">Register</a>
      <% } %>

        <% if (user) { %>
          <% if (user.role=="admin" ) { %>
            <a href="/dashboard" style="color:white; text-decoration:none;">Dashboard</a>
            <% } %>
              <a href="/task" style="color:white; text-decoration:none;">Task</a>
              <form action="/api/v1/user/logout" method="POST" style="display:inline;">
                <button style="
          background:#dc3545;
          color:white;
          border:none;
          padding:6px 12px;
          border-radius:3px;
          cursor:pointer;
        ">
                  Logout
                </button>
              </form>
              <% } %>

  </div>
</nav>